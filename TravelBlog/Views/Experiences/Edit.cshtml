@model TravelBlog.Models.Experience

@{
    ViewData["Title"] = "Experience - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<hr />
<h4>Edit this Experience :@Html.DisplayFor(model => model.Title)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)

    @Html.LabelFor(model => model.Title)
    @Html.EditorFor(model => model.Title)

    @Html.LabelFor(model => model.Content)
    @Html.EditorFor(model => model.Content)

    <input type="submit" value="Save" class="btn btn-default" />

}

@Html.ActionLink("Back to Experiences", "Index")
